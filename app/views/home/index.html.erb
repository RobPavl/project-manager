<h2 class="text-center">Todo lists</h2>

<div class="container" ng-app='todoList'>
  <div class="row">
    <div class="col-md-2" >
      <div>
        <h5><i>Список проектів:</i></h5>
        <ul>
          <li>проект 1</li>
          <li>проект 2</li>
          <li>проект 3</li>
          <li>проект 4</li>
          <li>проект 5</li>
        </ul>
      </div>
      <button type="button" class="btn btn-success">
        <span class="glyphicon glyphicon-plus"></span> Add new project
      </button>
    </div>
    <div class="col-md-9" >
      <div class="panel panel-primary">
        <div class="panel-heading"><!--ng-show='projecty '&& projectId == {{project.id}}-->
          <h3 class="panel-title">
            <span class="glyphicon glyphicon-tasks"></span> name
            <div class="pull-right">
              <button type="button" class="btn btn-primary btn-xs">
                <span class="glyphicon glyphicon-pencil"></span>
              </button>
              <button type="button" class="btn btn-primary btn-xs">
                <span class="glyphicon glyphicon-trash"></span>
              </button>
            </div>
          </h3>
        </div>
        <div >
        <div class="slide-animate" ng-include="'assets/angular/views/tasks/createTask.html'"></div>
        <div class="panel-body">
          <div>
            <div class="row"  >
              <div class="col-md-1"><input type="checkbox" ></div>
              <div class="col-md-9">
                <p > task
                  <span class="badge pull-right">deadline at deadline</span>
                </p>
              </div>
              <div class="col-md-2">
                <button type="button" class="btn btn-default btn-xs pull-right">
                  <span class="glyphicon glyphicon-pencil"></span>
                </button>
                <button type="button" class="btn btn-default btn-xs pull-right">
                  <span class="glyphicon glyphicon-trash"></span>
                </button>
                <button type="button" class="btn btn-default btn-xs pull-right">
                  <span class="glyphicon glyphicon-signal"></span>
                </button>
                <button type="button" class="btn btn-default btn-xs pull-right" >
                  <span class="glyphicon glyphicon-list-alt" ></span>
                </button>
              </div>
            </div>
            <div class="row">
              <div class="col-md-8">
                <div class="slide-animate" ng-include="'assets/angular/views/comments/comment.html'"></div>
              </div>
              <div class="slide-animate" ng-include="'assets/angular/views/tasks/editTask.html'"></div>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-1"></div>
</div>