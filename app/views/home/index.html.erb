<h2 class="text-center">Todo lists</h2>

<div class="container" ng-app='todoList'>
  <div class="row">
    <div class="col-md-2">
      <button type="button" class="btn btn-success">
        <span class="glyphicon glyphicon-plus"></span> Add new project
      </button>
    </div>
    <div class="col-md-9">
      <div class="panel panel-primary">
        <div class="panel-heading" >
          <h3 class="panel-title" ng-controller='ProjectCtrl'>
            <span class="glyphicon glyphicon-tasks"></span> {{text}}
            <div class="pull-right">
              <button type="button" class="btn btn-primary btn-xs">
                <span class="glyphicon glyphicon-pencil"></span>
              </button>
              <button type="button" class="btn btn-primary btn-xs">
                <span class="glyphicon glyphicon-trash"></span>
              </button>
            </div>
          </h3>
        </div>
        <div class="well well-sm" style="margin-bottom: 0px;">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Start typing here to create the task...">
            <span class="input-group-btn">
              <button class="btn btn-success active" type="button">Add Task</button>
            </span>
          </div>
        </div>
        <div class="panel-body" ng-controller="TaskCtrl">
        <div ng-repeat="task in tasks">
          <div class="row" >
            <div class="col-md-1"><input type="checkbox" ng-model='task.done'></div>
            <div class="col-md-9">
              <p > {{task.text}}
                <span class="badge pull-right">deadline at {{task.date}}</span>
              </p>
            </div>
            <div class="col-md-2">
              <button type="button" class="btn btn-default btn-xs pull-right">
                <span class="glyphicon glyphicon-pencil"></span>
              </button>
              <button type="button" class="btn btn-default btn-xs pull-right">
                <span class="glyphicon glyphicon-trash"></span>
              </button>
              <button type="button" class="btn btn-default btn-xs pull-right">
                <span class="glyphicon glyphicon-signal"></span>
              </button>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <div class="well well-sm"> 
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="Start typing here to create the new comment...">
                  <span class="input-group-btn">
                    <button class="btn btn-success active" type="button">Add Comment</button>
                  </span>
                </div>
                <ul class="list-group">
                  <li class="list-group-item">Comment to task because it need to do this
                    <button class="btn btn-default btn-xs">
                      <span class="glyphicon glyphicon-trash"></span>
                    </button>
                    <button class="btn btn-default btn-xs " ng-file-upload>
                      <span class="glyphicon glyphicon-paperclip"></span>
                    </button>                   
                  </li>
                </ul> 
              </div>
            </div>
            <div class="col-md-4">
              <div class="well">
                <div class="input-group">
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="button">change</button>
                  </span>
                  <input type="text" class="form-control" placeholder="Edit task here">
                </div>
                <div class="input-group">
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="button">change</button>
                  </span>
                  <input type="text" class="form-control" placeholder="Edit deadline here">
                </div>
              </div>
            </div>
          </div>
          </div>
        </div>    
      </div>
    </div>
  </div>
    <div class="col-md-1"></div>
</div>